#htmlheaderStart()

<script type="text/javascript">
    $(document).ready(function(){

     $(".delete").click(function(e){
         e.preventDefault();
          var rel = $(this).attr("rel");
         $.ajax({
             type: 'DELETE',
             url: "/piiririkkuja/"+rel+".html",
             success: function() {
                 window.location.replace("/piiririkkuja.html");
             }
         });
     });
    });

</script>

